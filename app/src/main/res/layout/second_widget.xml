<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.MyApplication.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/first_gradient"
    android:theme="@style/Theme.MyApplication.AppWidgetContainer">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        app:srcCompat="@drawable/amain" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/white"
        android:layout_toEndOf="@+id/imageView4"
        android:text="Office Ladies" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_marginLeft="24dp"
        android:layout_toEndOf="@+id/imageView4"
        android:text="Office Olympics \nw/ Paul Feig" />
</RelativeLayout>